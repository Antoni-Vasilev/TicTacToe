<resources>

    <style name="Base.Theme.TicTacToe" parent="Theme.Material3.Light.NoActionBar" />

    <style name="Theme.TicTacToe" parent="Base.Theme.TicTacToe">
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Text.Body.1M" parent="Theme.TicTacToe">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Text.Body.1" parent="Theme.TicTacToe">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Text.Header.2" parent="Theme.TicTacToe">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Text.Subtitle.2" parent="Theme.TicTacToe">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Button.Outline" parent="Theme.TicTacToe">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="strokeColor">@color/neutral_light_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Button.Fill" parent="Theme.TicTacToe">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="colorPrimary">@color/text_primary</item>
    </style>
</resources>